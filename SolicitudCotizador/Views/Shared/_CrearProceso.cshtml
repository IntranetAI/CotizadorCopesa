@model SolicitudCotizador.Models.Proceso

@{ 
    Layout = null;
}

@using (Html.BeginForm("Create","Proceso"))
{
    @Html.AntiForgeryToken()

            <!-- Modal content-->
    <div class="modal-content">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Nuevo Proceso</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal form" style="width: 100%">
                <div class="form-group">
                    @Html.LabelFor(model => model.NombreProceso, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.NombreProceso, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreProceso, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CantidadProceso, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CantidadProceso, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CantidadProceso, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Papel, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Papel, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Papel, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Gramaje, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Gramaje, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gramaje, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Coloress, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9 form-inline">
                        @Html.DropDownList("ColoresID1", null, htmlAttributes: new { @class = "form-control", @style = "width:63px" }) /
                        @Html.DropDownList("ColoresID2", null, htmlAttributes: new { @class = "form-control", @style = "width:63px" })
                        @Html.ValidationMessageFor(model => model.Coloress, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Observacion, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
                    </div>
                </div>
                
            </div>
            <br />
            <hr />
        </div>
        <div class="modal-footer">
            <input type="submit" value="Agregar" class="btn btn-default" onclick="@Url.Action("Create", "Proceso")"/>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
    </div>



